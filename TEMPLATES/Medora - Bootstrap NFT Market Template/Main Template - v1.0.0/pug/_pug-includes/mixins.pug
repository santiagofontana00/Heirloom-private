//- NFT ITEM
mixin nftItem(image, author, title, price, priceTip, highestBid, datePosted, likes, effect)
    // Nft Item
    .card.rounded.shadow-sm(class=effect)
        .card-body.p-3.position-relative
            .position-relative.mb-4.shadow
                // Author Image 
                .author.z-index-20
                    img.img-fluid.rounded-circle(src=`img/authors/${author}`, alt="...", width="45")
                    span.icon.bg-primary.text-white
                        i.las.la-check-double
                
                // Item Image 
                .card-img-holder.rounded.overflow-hidden
                    img.img-fluid.rounded.w-100(src=`img/items/${image}`, alt="")

            // Item Title
            p.fw-bold.mb-3 
                a.text-reset.stretched-link(href="item.html")  #{title}

            // Title Price 
            p.text-sm.text-muted.fw-normal.mb-2.d-flex.align-items-center
                span.icon.bg-primary.text-white.me-2
                    i.lab.la-bitcoin.fa-fw
                span Price: 
                span.text-primary.ms-2 #{price}
                span.ms-2 #{priceTip}

            // Highest Bid 
            p.text-sm.text-muted.fw-normal.d-flex.align-items-center
                span.icon.bg-primary.text-white.me-2
                    i.las.la-wallet.fa-fw
                span Highest bid:   
                span.text-primary.ms-2 #{highestBid}
            
            // Separator 
            .my-3.pt-1.bg-body.rounded-pill

            // Item Footer 
            ul.list-unstyled.d-flex.align-items-center.justify-content-between.fw-normal.text-sm.text-muted.mb-0
                li.d-flex.align-items-center
                    i.la-sm.text-primary.las.la-clock.me-2.text-primary
                    | #{datePosted}
                li.d-flex.align-items-center
                    i.la-sm.text-primary.las.la-heart.me-2.text-primary
                    | #{likes} Likes


//- LIVE AUCTION ITEM
mixin auctionItem(image, author, title, price, priceTip, date, time, timerVariant, effect)
    // Live Action 
    .card.rounded.shadow-sm(class=`${effect}`)
        .card-body.p-3.position-relative
            .position-relative.mb-4.shadow
                // Author Image 
                .author.z-index-20
                    img.img-fluid.rounded-circle(src=`img/authors/${author}`, alt="...", width="45")
                    span.icon.bg-primary.text-white
                        i.las.la-check-double
                
                // Auction Image 
                .card-img-holder.rounded.overflow-hidden
                    img.img-fluid.rounded.w-100(src=`img/items/${image}`, alt="")

            // Auction Title 
            p.fw-bold.mb-3 
                a.text-reset(href="item.html") #{title}

            // Auction Price 
            p.text-sm.text-muted.fw-normal.mb-2.d-flex.align-items-center
                span.icon.bg-primary.text-white.me-2
                    i.lab.la-bitcoin.fa-fw
                span Price: 
                span.text-primary.ms-2 #{price}
                span.ms-2 #{priceTip}
            
            // Auction Counter 
            .p-2.counter.d-flex.align-items-center.justify-content-center.text-center(data-date=date data-time=time, class=`counter-${timerVariant}`)
                .day.counter-item
                    strong.num
                    small.small.word
                .hour.counter-item
                    strong.num
                    small.small.word
                .min.counter-item
                    strong.num
                    small.small.word
                .sec.counter-item
                    strong.num
                    small.small.word

            // Separator 
            .my-3.pt-1.bg-body.rounded-pill

            // Place a Bid 
            a.btn.btn-primary.btn-sm.w-100(href="") Place your bid



//- HORIZONTAL LIVE AUCTION ITEMS
mixin horizontalAucItem(image, author, title, description, price, priceTip, date, time, timerVariant)
    // Trending Action 
    .card.rounded.shadow-lg
        .card-body.p-3.position-relative
            
            // Auction Author
            .position-absolute.top-0.end-0.translate-middle
                .position-relative
                    img.img-fluid.rounded-circle(src=`img/authors/${author}`, alt="...", width="45")
                    span.icon.bg-primary.text-white.position-absolute.top-50.start-100.translate-middle
                        i.las.la-check-double
                
            .row.align-items-center.gy-4

                // Auction Author 
                .col-lg-6
                    img.img-fluid.rounded.w-100(src=`img/items/${image}`, alt="")
                
                // Auction Info 
                .col-lg-6
                    p.h5.fw-bold.mb-3 
                        a.text-reset(href="item.html")  #{title}
                    p.text-muted.text-sm.mb-3 #{description}
                    p.text-sm.text-muted.fw-normal.mb-2.d-flex.align-items-center
                        i.fab.fa-bitcoin.me-2.fa-fw
                        span Price: 
                        span.text-primary.ms-2 #{price}
                        span.ms-2 #{priceTip}

                    // Auction Counter 
                    .p-2.counter.d-flex.align-items-center.justify-content-center.text-center(data-date=date data-time=time, class=`counter-${timerVariant}`)
                        .day.counter-item
                            strong.num
                            small.small.word
                        .hour.counter-item
                            strong.num
                            small.small.word
                        .min.counter-item
                            strong.num
                            small.small.word
                        .sec.counter-item
                            strong.num
                            small.small.word

                    // Separator 
                    .my-3.pt-1.bg-body.rounded-pill

                    // Place a bid 
                    a.btn.btn-primary.btn-sm.w-100(href="") Place your bid



//- COUNTER ITEM
mixin counter(date, time, timerVariant)
    // Counter 
    .p-2.counter.d-flex.align-items-center.justify-content-center.text-center.w-100(data-date=date data-time=time, class=`counter-${timerVariant}`)
        .day.counter-item
            strong.num.h5.mb-0
            span.text-sm.d-block.mt-2.word
        .hour.counter-item
            strong.num.h5.mb-0
            span.text-sm.d-block.mt-2.word
        .min.counter-item
            strong.num.h5.mb-0
            span.text-sm.d-block.mt-2.word
        .sec.counter-item
            strong.num.h5.mb-0
            span.text-sm.d-block.mt-2.word


//- BID COMPONENT
mixin bid(authorImg, authorName, price, date, time, customClass, accepted)
    // Bid Item 
    li.d-flex.align-items-center.rounded.p-3.bd-3.bg-dark(class=customClass)
        img.img-fluid.rounded-circle(src=`img/authors/author-${authorImg}.jpg`, alt="...", width="50")
        .ms-2
            p.text-sm.mb-1.text-muted Bid #{accepted} 
                span.text-primary #{price}
            p.text-sm.mb-0.text-muted by 
                span.text-primary #{authorName} 
                | at #{date}, #{time}



//- COLLECTION ITEM
mixin collItem(image, title, author, tag, effect)
    // Collection Item 
    .card.card-light.rounded.shadow(class=effect)
        .card-body.p-2
            // Collection Image 
            a.d-block.overflow-hidden.rounded(href="#")
                .card-img-holder-sm.rounded.overflow-hidden
                    img.img-fluid.rounded(src=`img/collections/${image}`, alt="...")
            
            // Collection Author 
            a.text-reset.text-decoration-none.collection-author.shadow.rounded-pill(href="#") 
                .me-2.text-end
                    p.text-sm.fw-normal.mb-0 #{title}
                    p.text-muted.small.mb-0 #{tag}
                img(src=`img/authors/${author}`, alt="")


