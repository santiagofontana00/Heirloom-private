extends _pug-includes/layout

block vars 
    - var login = true
    - var heroPage = true
    - var pageTitle = 'Signin to your account'

block content 

    //- Hero Section
    include _pug-includes/page-hero.pug


    // LOGIN SECTION 
    section.py-5.position-relative
        .container.py-5            
            .row
                .col-lg-8.mx-auto

                    // Login Card 
                    .card
                        .card-body.p-4.p-lg-5

                            // Login Form 
                            form.login-form(action="#") 
                                .row.gy-3
                                    .col-lg-12
                                        label.form-label(for="email")  Email address
                                        .input-group
                                            .input-group-text.border-end-0.pe-0
                                                i.text-primary.las.la-envelope
                                            input.form-control.shadow-0.border-start-0(type="email", autocomplete="off", name='email' id='email', placeholder="Enter your email address")
                                    .col-lg-12
                                        label.form-label(for="password")  Password
                                        .input-group
                                            .input-group-text.border-end-0.pe-0
                                                i.text-primary.las.la-key
                                            input.form-control.shadow-0.border-start-0(type="password", autocomplete="off", name='password' id='password', placeholder="Enter your password")
                                    .col-lg-12.mb-3
                                        button.btn.btn-primary.w-100(type="submit") 
                                            i.las.la-sign-in-alt.me-2
                                            | Sign in now
                                    .col-12.text-center
                                        p.mb-0.fw-light.text-muted Not registered yet! 
                                            a.text-decoration-none(href="register.html")  Create an account
                                    
